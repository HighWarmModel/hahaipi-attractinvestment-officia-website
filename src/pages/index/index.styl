      border 1px solid #dcdcdc
      border-top none
      padding-top 40px
      transition all 0.3s ease-in-out
      .index-introduce-icon
        width 63px
        height 62px
        // transition all 0.3s ease-in-out
        background url('./img/introduce-icon.png') no-repeat
